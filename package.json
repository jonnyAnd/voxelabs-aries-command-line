{
  "scripts": {
    "build": "esbuild src/main.js --bundle --platform=node --outfile=dist/voxelab-cli.js",
    "release": "npm run build && pkg dist/voxelab-cli.js -c package.json --out-path ./bin"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.5.1",
    "esbuild": "^0.19.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node14-linux-x64"
    ],
    "outputPath": "dist"
  }
}
